@using net_il_mio_fotoalbum.Models
@model Photo;

@{
    Layout = "_LayoutDave";
}

<div class="photo-details-container">
    <div class="photo-details">
        <div class="photo-info">
            <h2>@Model.Title</h2>
            <p>@Model.Description</p>
            <div class="categories">
                @foreach (var category in Model.Categories)
                {
                    <span>@category.Title</span>
                    <br />
                }
            </div>
        </div>
        <div class="photo-image">
            @if (Model.Image != null && Model.Image.Length > 0)
            {
                var base64 = Convert.ToBase64String(Model.Image);
                var imgSrc = $"data:image/jpeg;base64,{base64}";
                <img src="@imgSrc" alt="@Model.Title" class="img-fluid" />

                <form method="post" action="@Url.Action("DeletePhoto", "Photo", new { id = Model.Id })" onsubmit="return confirm('Are you sure you want to delete this photo?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            }
            else
            {
                <p class="no-image">No image available</p>
            }
        </div>
    </div>
</div>

<style>
    .photo-details-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .photo-info {
        margin-bottom: 20px;
    }

        .photo-info h2 {
            margin-bottom: 10px;
        }

        .photo-info p {
            margin-bottom: 10px;
        }

    .categories span {
        display: inline-block;
        margin-right: 5px;
        padding: 5px 10px;
        background-color: #f1f1f1;
        border-radius: 5px;
    }

    .photo-image img {
        max-width: 100%;
        height: auto;
        display: block;
        margin-bottom: 20px;
    }

    .no-image {
        font-size: 18px;
        color: #888;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 10px 20px;
        color: white;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>
